<% if !@error_messages.nil? %>
  <% if @error_messages.any? %>
<div class="">
<div class="toast toast-demo show" id="error_messages" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <strong class="me-auto danger"><div class="p-3 mb-2 bg-danger text-white"><%= pluralize(@error_messages.count, "error") %></div></strong>
    <small>11 mins ago</small>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    <% @error_messages.each do |msg| %>
        <p class="error"> <%= msg %></p><br>
      <% end %>
  </div>
</div>
</div>
<% end %>
<% end %>