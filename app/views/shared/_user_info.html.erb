<div class="container-fluid">
<div class="row">
  <div class="col-auto">
  <%= link_to gravatar_for(current_user, size:50, class:"rounded mx-auto d-block"), current_user %>
  </div>
  <div class="col-auto">
  <h1> <%= current_user.name %> </h1>
  <span> <%= link_to "view my profile", current_user %> </span>
