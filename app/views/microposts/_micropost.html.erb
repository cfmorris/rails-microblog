<li id="micropost-<%= micropost.id %>" class="list-group-item">  
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-1 p-2">
        <%= link_to gravatar_for(micropost.user, size: 50) %>
      </div>
      <div class="col-md-10 p-2">
        <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
        <span class="timestamp">
          </br><small class="text-muted"><%= time_ago_in_words(micropost.created_at) %> ago.</small>
        </span></br>
      </div>
      <% if current_user == (micropost.user) %>
      <div class="col-md-1">
        <%= button_to "delete", micropost, class:"btn btn-outline-danger", method: "delete", data: { confirm: "you sure?" } %>
      </div>
      <% end %>
    </div>

    <div class="container-fluid">
        <span class="content">
          <%= micropost.content %>
        </span>
      <%= image_tag micropost.display_image, class:"rounded mx-auto d-block img-fluid p2" if micropost.image.attached? %>
    </div>
  </div>
</li>
  