<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <%= render "layouts/navbar" %>

    <!-- main body begin -->
    <!-- Alerts -->

    <div class="countainer pt-5 pb-5"></div>
      <div class="row">
        <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "text-center alert alert-#{message_type}") %></div>
        <% end %>
      </div>

    <!-- main container grid -->
      <div class="container-fluid">
        <div class="row">
        <%= yield %>
        </div>
      </div>
      <div class="row">
        <div class='container center align-bottom'><%= link_to image_tag("rails.svg", alt: "rails logo", width: "200"), "https://rubyonrails.org/" %></div>
        
        </div>
     <!-- footer begin --> 
      <div class="row">
      <%= render "layouts/footer" %>
      </div>
      <div class="row">
      <div class="@mixin"> <%= debug(params) if Rails.env.development? %> </div>
      </div>
      <div class="row">
      <div class="@mixin"> <%= console if Rails.env.development? %> </div>
      </div>
    </div>  
  </body>
</html>