<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all",
                                           'data-turbolinks-track': "reload" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track': "reload" %>
    <%= render "layouts/shim" %>  
  </head>
  <body>
    <%= render "layouts/navbar" %>

      <%= yield %>
      <div class='container center'><%= link_to image_tag("rails.svg", alt: "rails logo", width: "200"), "https://rubyonrails.org/" %></div>
      <%= render "layouts/footer" %>
    
  </body>
</html>