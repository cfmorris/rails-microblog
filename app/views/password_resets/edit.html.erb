<% provide(:title, "new password") %>
<div class="row">
    </div>
  <div class="col-md-6 col-md-offset-3">
    <h1 class="ctr">Reset Password:</h1>
    <div id="errors">
      <%= render 'shared/error_messages' %>
    </div>
    <div id="reset_form">
    <%= form_with(model:@user, url:password_reset_path(params[:id]),
                  method: "patch", local: true) do |f|%>
      
      <%= hidden_field_tag :email, @user.email %>
      
      <%= f.label :password %>
      <%= f.email_field :password, type:"password", class: 'form-control' %> 
      
      <%= f.label :password_confirmation %>
      <%= f.email_field :password_confirmation, type:"password", class: 'form-control' %>     
    </div>
    <div class="button">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
